# Production Environment Variables
# Copy this file to `.env` (or `.env.prod`) and update with secure values before deploying.

# ----------------------------
# Core application behaviour
# ----------------------------
ENVIRONMENT=production
USE_MOCK_SERVICES=false
LOG_LEVEL=INFO
LOG_FILE=/app/logs/trading_system.log
CLUSTER_NAME=prod-cluster
AGENT_INSTANCE_ID=ats-orchestrator-1
AGENT_SCHEDULE_PROFILE=hours
DEFAULT_AGENT_CYCLE_SECONDS=300

# ----------------------------
# Data stores
# ----------------------------
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=trading_system
POSTGRES_USER=trading_user
POSTGRES_PASSWORD=replace_with_strong_password

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=trading_memory

NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=replace_with_strong_password

# ----------------------------
# Forecasting & research APIs
# ----------------------------
MCP_API_URL=https://forecasting.guidry-cloud.com
MCP_API_KEY=replace_with_real_key
BLOCKSCOUT_MCP_URL=https://mcp.blockscout.com/mcp
DEEP_SEARCH_API_URL=
DEEP_SEARCH_API_KEY=
DEEP_SEARCH_SOURCES=coindesk,cointelegraph,decrypt
ARXIV_ENABLED=true

# ----------------------------
# LLM / embeddings
# ----------------------------
OPENAI_API_KEY=
GEMINI_API_KEY=
VLLM_ENDPOINT=http://vllm:8002/v1
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=nomic-embed-text
MEMORY_EMBEDDING_PROVIDER=ollama

# ----------------------------
# Logging & observability
# ----------------------------
LOGFIRE_TOKEN=
SENTRY_DSN=

# ----------------------------
# Chat & review agents
# ----------------------------
CHAT_AGENT_MODEL=gpt-4o-mini
CHAT_AGENT_PROMPT=You are the portfolio copilot. Debate user choices in <=3 lines and highlight risk.
MEMORY_CHAT_HISTORY_LIMIT=100
MEMORY_RETRIEVE_LIMIT=3
MEMORY_TOKEN_LIMIT=4096
MEMORY_PRUNE_LIMIT=100
MEMORY_PRUNE_SIMILARITY_THRESHOLD=0.82
REVIEW_INTERVAL_HOURS=24
REVIEW_PROMPT_DEFAULT=Review recent agent performance, adjust coordination weights to maximize risk-adjusted returns, and surface rationale for any changes. Keep weights normalized to 1.0.

# ----------------------------
# Trading configuration
# ----------------------------
INITIAL_CAPITAL=10000.0
MAX_POSITION_SIZE=0.20
MAX_DAILY_LOSS=0.05
MAX_DRAWDOWN=0.15
TRADING_FEE=0.001
MIN_CONFIDENCE=0.7
TRADE_REWARD_WINDOW_SECONDS=3600
TRADE_REWARD_MIN_CONFIDENCE=0.55
TRADE_REWARD_MAX_PENDING=500
TRADE_REWARD_PRICE_SOURCE=chart

# ----------------------------
# Copy-trade / blockchain
# ----------------------------
BSC_RPC_URL=https://bsc-dataseed.binance.org/
ETH_RPC_URL=https://eth.llamarpc.com
SOL_RPC_URL=https://api.mainnet-beta.solana.com
PRIVATE_KEY=
WALLET_ADDRESS=

# ----------------------------
# Security / auth
# ----------------------------
JWT_SECRET_KEY=replace_with_secure_jwt
API_SECRET_KEY=
API_ALGORITHM=HS256
FRONTEND_TOKEN=frontend_access_token_2025_secure

# ----------------------------
# Monitoring / dashboards (optional)
# ----------------------------
GRAFANA_ADMIN_PASSWORD=replace_with_secure_password
